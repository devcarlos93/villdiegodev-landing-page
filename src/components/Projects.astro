---
import { ExternalLink, Github } from 'lucide-astro';

const projects = [
  {
    title: "Turnelo Admin",
    description: "App administrativa para salones de belleza  y barberías | Agenda de citas, POS y programa de lealtad",
    image: 'https://awqytuhclhkvvecvcfrm.supabase.co/storage/v1/object/public/turnerlo-landing/agenda-turnelo.png',
    technologies: ["Angular", "PirmeNG", "Twilio", "Supabase", "Vercel"],
    liveUrl: "https://admin.turneloapp.com/auth/login",
    githubUrl: "https://github.com/devcarlos93/admin-turnelo"
  },
  {
    title: "Landing page TurneloApp",
    description: "Landing page de lanzamiento para el producto turnelo app.",
    image: "https://awqytuhclhkvvecvcfrm.supabase.co/storage/v1/object/public/turnerlo-landing/landing%20turnelo.png",
    technologies: ["Vue.js", "Astrojs", "Tailwind CSS"],
    liveUrl: "https://www.turneloapp.com/",
    githubUrl: "https://github.com/devcarlos93/landing-turnelo"
  },
  {
    title: "Portfolio CMS",
    description: "Sistema de gestión de contenido para portfolios creativos con editor visual y optimización SEO.",
    image: "https://picsum.photos/600/400?random=3",
    technologies: ["Astro", "Sanity", "TypeScript"],
    liveUrl: "#",
    githubUrl: "#"
  },
];
---

<section id="proyectos" class="py-20 relative">
  <div class="section-container">
    <!-- Section Title -->
    <div class="text-center mb-16 section-title">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Mis <span class="gradient-text">Proyectos</span>
      </h2>
      <p class="text-xl text-white/60">Trabajos destacados</p>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 projects-grid">
      {projects.map((project, index) => (
        <div class="project-card" data-index={index}>
          <div class="card-glass rounded-xl overflow-hidden hover:scale-105 transition-all duration-300 h-full flex flex-col">
            <!-- Project Image -->
            <div class="relative overflow-hidden aspect-video bg-gradient-to-br from-gray-900 to-gray-800">
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-full object-contain transition-transform duration-500 hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-0 hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                <div class="flex gap-3">
                  <a 
                    href={project.liveUrl} 
                    class="p-2 bg-white/10 backdrop-blur-sm rounded-lg hover:bg-white/20 transition-colors"
                    aria-label="Ver proyecto"
                  >
                    <ExternalLink size={20} />
                  </a>
                  <a 
                    href={project.githubUrl} 
                    class="p-2 bg-white/10 backdrop-blur-sm rounded-lg hover:bg-white/20 transition-colors"
                    aria-label="Ver código"
                  >
                    <Github size={20} />
                  </a>
                </div>
              </div>
            </div>

            <!-- Project Info -->
            <div class="p-6 flex-1 flex flex-col">
              <h3 class="text-xl font-bold mb-2">{project.title}</h3>
              <p class="text-white/60 text-sm mb-4 flex-1">
                {project.description}
              </p>

              <!-- Technologies -->
              <div class="flex flex-wrap gap-2">
                {project.technologies.map((tech) => (
                  <span class="px-3 py-1 bg-white/5 rounded-full text-xs border border-white/10">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a href="#" class="btn-primary inline-flex items-center gap-2">
        Ver Más Proyectos
        <ExternalLink size={18} />
      </a>
    </div>
  </div>
</section>

<style>
  #proyectos {
    background: linear-gradient(180deg, 
      rgba(26, 26, 46, 1) 0%, 
      rgba(255, 107, 53, 0.05) 50%,
      rgba(26, 26, 46, 1) 100%
    );
  }
</style>